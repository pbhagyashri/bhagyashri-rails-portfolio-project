<div class="container">
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 sign-in-portal">
      <h2>Login!</h2>

      <% if flash[:message] %>
        <%= flash[:message] %>
      <% end %>
      
      <%= form_tag(sessions_path) do %>
      
        <p>
          <%= label_tag 'Username' %>
          <%= text_field_tag :username %>
        </p>
      
        <p>
          <%= label_tag 'Email' %>
          <%= text_field_tag :email %>
        </p>
      
        <p>
          <%= label_tag 'Password' %>
          <%= password_field_tag :password %>
        </p>
      
        <p>
          <%= submit_tag 'Login'%>
        </p>
      <% end %>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>


