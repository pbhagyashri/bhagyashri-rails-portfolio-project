<h1>Login!</h1>

<%= form_tag(sessions_path) do %>
  <p>
    <%= label_tag 'Username' %>
    <%= text_field_tag :username %>
  </p>

  <p>
    <%= label_tag 'Email' %>
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= label_tag 'Password' %>
    <%= text_field_tag :password %>
  </p>

  <p>
    <%= submit_tag 'Login' %>
  </p>
<% end %>
