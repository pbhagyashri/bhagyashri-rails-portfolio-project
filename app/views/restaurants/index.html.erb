<%= link_to "Home", root_path %>

<% if logged_in? %>
  <%= link_to 'Logout', logout_path  %>
  <h1>Hello <%= current_user.username %></h1>
  <%= link_to "Your Profile", user_path(current_user) %>

  <%= link_to "Add Restaurant", new_restaurant_path %>

<% else %>
  <%= link_to 'Login', login_path %><br>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %><br>
  <%= link_to 'Signup', signup_path %>
<% end %>
<br>

<hr>

<% if flash[:message] %>
  <h2><%= flash[:message] %></h2>
<% end %>

<div style="background-color: #FD8664; padding: 20px; margin-bottom: 10px; width: 50%; margin-left: 25%;">
  <h2>Tastiest Restaurants</h2>
  <% Restaurant.tastiest_restuarants.each do |restaurant|%>
  <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
  <% end %>
</div>

<div style="background-color: #8AB661; padding: 20px; margin-bottom: 10px; width: 50%; margin-left: 25%;">
  <h2>Healthiest Restaurants</h2>
  <% Restaurant.healthies_restuarants.each do |restaurant|%>
    <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
  <% end %>
</div>

<div>
<% @restaurants.each do |restaurant| %>
  <%= render partial: "restaurant", locals: {restaurant: restaurant} %>
<% end %>
</div>
